<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    tools:context=".DetailsFragment">

    <ImageView
        android:id="@+id/details_image"
        android:layout_width="0dp"
        android:layout_height="192dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/placeholder_image"
        tools:srcCompat="@drawable/placeholder_image" />

    <TextView
        android:id="@+id/details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/crimson_text_semibold"
        android:text="Quiz Title"
        android:textColor="@color/colorPrimary"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_image" />

    <TextView
        android:id="@+id/details_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/work_sans"
        android:text="Quiz Description"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_title"
        app:lineHeight="28dp" />

    <TextView
        android:id="@+id/details_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/work_sans"
        android:text="Difficulty"
        android:textColor="@color/colorLightText"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_desc" />

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent" android:id="@+id/details_questions" app:layout_constraintTop_toBottomOf="@+id/details_difficulty" android:textSize="16sp" android:textColor="@color/colorLightText" android:text="Total Questions" android:fontFamily="@font/work_sans" android:layout_marginTop="16dp" android:layout_marginStart="32dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent" android:id="@+id/details_score" app:layout_constraintTop_toBottomOf="@+id/details_questions" android:textSize="16sp" android:textColor="@color/colorLightText" android:text="Your Last Score" android:fontFamily="@font/work_sans" android:layout_marginTop="16dp" android:layout_marginStart="32dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintTop_toTopOf="@+id/details_difficulty" app:layout_constraintEnd_toEndOf="parent" android:id="@+id/details_difficulty_text" android:textSize="16sp" android:textColor="@color/colorLightText" android:text="NA" android:fontFamily="@font/work_sans" android:layout_marginEnd="32dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintEnd_toEndOf="parent" android:id="@+id/details_questions_text" app:layout_constraintTop_toBottomOf="@+id/details_difficulty_text" android:textSize="16sp" android:textColor="@color/colorLightText" android:text="NA" android:fontFamily="@font/work_sans" android:layout_marginTop="16dp" android:layout_marginEnd="32dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintEnd_toEndOf="parent" android:id="@+id/details_score_text" app:layout_constraintTop_toBottomOf="@+id/details_questions_text" android:textSize="16sp" android:textColor="@color/colorLightText" android:text="NA" android:fontFamily="@font/work_sans" android:layout_marginTop="16dp" android:layout_marginEnd="32dp"/>

    <Button android:background="@drawable/button" android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:id="@+id/details_start_btn" android:textSize="16sp" android:text="Start Quiz" android:fontFamily="@font/work_sans" android:layout_marginStart="32dp" android:layout_marginEnd="32dp" app:layout_constraintHorizontal_bias="0.498" app:layout_constraintBottom_toBottomOf="parent" android:textAllCaps="false" android:layout_marginBottom="32dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>